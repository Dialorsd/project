<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <!-- Container for all buttons -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:padding="4dp"
        android:background="#CCCCCC"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

        <!-- Button for showing List 1 Popup Dialog -->
        <Button
            android:id="@+id/buttonList1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contacts"
            android:layout_marginEnd="0dp"/>

        <!-- Button for showing List 2 Popup Dialog -->
        <Button
            android:id="@+id/buttonList2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="INFO"
            android:layout_marginEnd="0dp"/>

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/buttonEditProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile"
            android:layout_marginEnd="0dp"/>

        <!-- Logout Button -->
        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Logout"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: John Doe"
        android:textSize="16sp"
        android:layout_below="@id/buttonsContainer"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: john@example.com"
        android:textSize="16sp"
        android:layout_below="@id/textViewUsername"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"/>
</RelativeLayout>
